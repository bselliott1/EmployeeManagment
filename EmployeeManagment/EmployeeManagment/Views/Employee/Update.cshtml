@model EmployeeManagment.Models.UpdateEmployeeModel

<script src="~/Scripts/EmployeeManagment/employee.js" type="text/javascript"></script>
<h2>Update Employee</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <label>Search Last Name:</label>
        </div>
        <div class="col-md-7">
            <input id="searchString" type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary" onclick="searchEmployee()">Search</button>
        </div>
    </div>

    <hr />

    <div id="successMessage" class="hidden alert alert-success">
        Successfully Updated!
    </div>
    <div id="errorMessage" class="hidden alert alert-danger">
        Error Occurred!
    </div>

    <div class="container col-md-6 float-md-left">
        <input id="employeeId" type="hidden" />
        <div class="form-group row">
            <div class="col-md-3">
                Last Name:
            </div>
            <div class="col-md-8">
                <input id="employeeLastName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Middle Name:
            </div>
            <div class="col-md-8">
                <input id="employeeMiddleName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                First Name:
            </div>
            <div class="col-md-8">
                <input id="employeeFirstName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Birth Date:
            </div>
            <div class="col-md-8">
                <input id="employeeBirthDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Hire Date:
            </div>
            <div class="col-md-8">
                <input id="employeeHireDate" type="date" class="form-control" />
            </div>
        </div>
    </div>

    <div class="container col-md-6 float-md-right">
        <div class="form-group row">
            <div class="col-md-3">
                Department
            </div>
            <div class="col-md-8">
                <input id="employeeDepartment" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Job Title
            </div>
            <div class="col-md-8">
                <input id="employeeJobTitle" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Pay Rate:
            </div>
            <div class="col-md-8">
                <input id="employeePayRate" type="text" class="form-control float-left col-md-5" />
                @Html.EnumDropDownListFor(model => model.SalaryType, "Salary Type", new { htmlAttributes = new { @class = "col-md-4 form-control" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Available Hours:
            </div>
            <div class="col-md-8">
                <input id="employeeAvailableHours" type="text" class="form-control" />
            </div>
        </div>
    </div>


    <div class="container col-md-6 float-md-right">
        <div class="form-group row">
            <span class="offset-md-1 col-md-4">
                <button class="btn btn-primary btn-block margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
            </span>
            <span class="col-md-4">
                <button class="btn btn-secondary btn-block" onclick="Clear">Clear</button>
            </span>
        </div>
    </div>
</div>