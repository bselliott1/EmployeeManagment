@model EmployeeManagment.Models.CreateEmployeeModel

<!DOCTYPE html>

<html>
<head>
    <title>Create Employee</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    @using (Html.BeginForm("Create", "Employee", FormMethod.Post))
    {
        <div class="container-fluid">
            <h1>Create Employee</h1>
            <div class="container col-md-6 float-md-left">
                <div class="form-group row">
                    <div class="col-md-3">
                        First Name:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        Middle Name:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Last Name:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Birth Date:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Hire Date:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.HireDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="container col-md-6 float-md-right">
                <div class="form-group row">
                    <div class="col-md-3">
                        Department:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Job Title:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Pay Rate:
                    </div>
                    <div class=" col-md-8">
                        @Html.EditorFor(model => model.PayRate, new { htmlAttributes = new { @class = "col-md-5 float-left form-control" } })
                        @Html.EnumDropDownListFor(model => model.SalaryType, "Salary Type", new { htmlAttributes = new { @class = "col-md-4 form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Employee ID:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.EmployeeId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        Available Hours:
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.AvailableHours, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <span class="offset-md-1 col-md-4">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </span>
                    <span class="col-md-4">
                        <input type="reset" value="Clear" class="btn btn-secondary btn-block" />
                    </span>
                </div>
            </div>
        </div>
    }
</body>
</html>